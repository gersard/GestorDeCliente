<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.gerardo.gestordeclientes.ui.fragment.AgregarMotoFragment">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:text="Marca" />

    <EditText
        android:id="@+id/edit_agregar_moto_marca"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_background_white"
        android:padding="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:text="Modelo" />

    <EditText
        android:id="@+id/edit_agregar_moto_modelo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_background_white"
        android:padding="4dp" />

    <Button
        android:id="@+id/btn_agregar_moto_agregar"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background_white"
        android:text="Agregar Moto" />

</LinearLayout>
